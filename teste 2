<body>
<header>‚öΩ Palpites do Futebol!</header>
<main>
  <div id="login">
    <p>Digite seu nome para come√ßar:</p>
    <input type="text" id="nomeJogador" placeholder="Seu nome">
    <button onclick="entrar()">Entrar</button>
  </div>

  <div id="app" style="display:none;">
    <h3 id="boasVindas"></h3>
    <div id="games"></div>

    <div class="ranking">
      <h2>üèÜ Ranking</h2>
      <table id="tabelaRanking">
        <tr><th>Jogador</th><th>Acertos</th><th>Patente</th></tr>
      </table>
    </div>
  </div>
</main>

<script>
let jogador = null;
const API_KEY = "SUA_CHAVE_API_FOOTBALL"; // coloque sua chave
const LEAGUES = { "Brasileir√£o": 71, "Libertadores": 128 }; // IDs da API-Football

// salva palpites locais
let palpites = JSON.parse(localStorage.getItem("palpites")) || {};

async function buscarJogos() {
  let todosJogos = [];
  for (const liga in LEAGUES) {
    const res = await fetch(`https://v3.football.api-sports.io/fixtures?league=${LEAGUES[liga]}&season=2025&next=5`, {
      headers: { "x-apisports-key": API_KEY }
    });
    const data = await res.json();
    const jogos = data.response.map(j => ({
      id: j.fixture.id,
      liga: liga,
      timeA: j.teams.home.name,
      logoA: j.teams.home.logo,
      timeB: j.teams.away.name,
      logoB: j.teams.away.logo,
      inicio: j.fixture.date,
      resultado: j.score.fulltime ? (j.score.fulltime.home > j.score.fulltime.away ? j.teams.home.name : j.score.fulltime.home < j.score.fulltime.away ? j.teams.away.name : "Empate") : null
    }));
    todosJogos = todosJogos.concat(jogos);
  }
  return todosJogos;
}

async function carregarJogos() {
  const container = document.getElementById("games");
  container.innerHTML = "";
  const jogos = await buscarJogos();
  const agora = new Date();

  jogos.forEach(jogo => {
    const inicioJogo = new Date(jogo.inicio);
    const permitido = agora < inicioJogo;
    const palpiteAtual = palpites[jogo.id] || "";

    const div = document.createElement("div");
    div.classList.add("game");
    div.innerHTML = `
      <div class="team">
        <img src="${jogo.logoA}" alt="${jogo.timeA}">
        <p>${jogo.timeA}</p>
      </div>
      <div class="vs">
        <p>${jogo.liga} - ${inicioJogo.toLocaleString()}</p>
        <select id="palpite${jogo.id}" ${!permitido ? "disabled" : ""}>
          <option value="">Escolher...</option>
          <option value="${jogo.timeA}" ${palpiteAtual===jogo.timeA?"selected":""}>${jogo.timeA}</option>
          <option value="Empate" ${palpiteAtual==="Empate"?"selected":""}>Empate</option>
          <option value="${jogo.timeB}" ${palpiteAtual===jogo.timeB?"selected":""}>${jogo.timeB}</option>
        </select><br><br>
        <button onclick="enviarPalpite(${jogo.id}, '${jogo.timeA}', '${jogo.timeB}')" ${!permitido ? "disabled" : ""}>Enviar</button>
      </div>
      <div class="team">
        <img src="${jogo.logoB}" alt="${jogo.timeB}">
        <p>${jogo.timeB}</p>
      </div>
    `;
    container.appendChild(div);

    // checar resultado autom√°tico
    if(jogo.resultado && palpites[jogo.id]) {
      verificarResultado(jogo);
    }
  });
}

function enviarPalpite(id, timeA, timeB) {
  const select = document.getElementById(`palpite${id}`);
  const escolha = select.value;
  if(!escolha) return alert("Escolha um palpite!");
  palpites[id] = escolha;
  localStorage.setItem("palpites", JSON.stringify(palpites));
  alert("Palpite salvo! Resultado ser√° computado automaticamente ap√≥s o jogo.");
}

// computa resultado automaticamente
function verificarResultado(jogo) {
  const ranking = JSON.parse(localStorage.getItem("ranking")) || {};
  ranking[jogador] = ranking[jogador] || 0;
  if(palpites[jogo.id]===jogo.resultado){
    ranking[jogador]++;
    delete palpites[jogo.id]; // remove palpites j√° computados
    localStorage.setItem("palpites", JSON.stringify(palpites));
    localStorage.setItem("ranking", JSON.stringify(ranking));
    alert(`‚úÖ Voc√™ acertou o jogo ${jogo.timeA} x ${jogo.timeB}!`);
  } else {
    delete palpites[jogo.id];
    localStorage.setItem("palpites", JSON.stringify(palpites));
  }
  atualizarRanking();
}

function atualizarRanking() {
  const tabela = document.getElementById("tabelaRanking");
  const ranking = JSON.parse(localStorage.getItem("ranking")) || {};
  tabela.innerHTML = "<tr><th>Jogador</th><th>Acertos</th><th>Patente</th></tr>";
  const jogadores = Object.entries(ranking).sort((a,b)=>b[1]-a[1]);
  jogadores.forEach(([nome, acertos])=>{
    let patente = "Iniciante";
    if(acertos>=10) patente="üî• Lenda";
    else if(acertos>=5) patente="‚≠ê Pro";
    else if(acertos>=3) patente="ü•à Intermedi√°rio";
    else if(acertos>=1) patente="ü•â Amador";
    const linha = document.createElement("tr");
    linha.innerHTML = `<td>${nome}</td><td>${acertos}</td><td>${patente}</td>`;
    tabela.appendChild(linha);
  });
}

function entrar() {
  const nome = document.getElementById("nomeJogador").value.trim();
  if(!nome) return alert("Digite seu nome!");
  jogador = nome;
  localStorage.setItem("jogadorAtual", jogador);
  document.getElementById("login").style.display="none";
  document.getElementById("app").style.display="block";
  document.getElementById("boasVindas").innerText=`Bem-vindo, ${jogador}!`;
  carregarJogos();
  atualizarRanking();
}

window.onload = ()=>{
  const nomeSalvo = localStorage.getItem("jogadorAtual");
  if(nomeSalvo){
    jogador=nomeSalvo;
    document.getElementById("login").style.display="none";
    document.getElementById("app").style.display="block";
    document.getElementById("boasVindas").innerText=`Bem-vindo de volta, ${jogador}!`;
    carregarJogos();
    atualizarRanking();
  }
  // atualiza resultados a cada 1 minuto
  setInterval(carregarJogos, 60000);
};
</script>
</body>
</html>
